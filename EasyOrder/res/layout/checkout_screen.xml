<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkoutview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_cat"
    android:padding="5dp" >

    <ListView
        android:id="@+id/listview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tsllorderstatus"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:divider="@color/almond"
        android:dividerHeight="1dp" >
    </ListView>

    <LinearLayout
        android:id="@+id/tsllorderstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnpaynow"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tsorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/tsorder"
            android:textColor="@color/almond"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tspayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/almond"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnpaynow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/btnpaynow"
        android:textColor="@color/almond"
        android:textSize="25sp"
        android:textStyle="italic" />

</RelativeLayout>
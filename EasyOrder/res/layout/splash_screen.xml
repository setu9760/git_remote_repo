<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_cat" >

    <TextView
        android:id="@+id/EOsplashlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/splashlabel"
        android:textColor="@color/android_green"
        android:textSize="40sp"
        android:textStyle="italic"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/EOsplashtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EOsplashlabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/splashtext"
        android:textColor="@color/android_green"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="monospace" >
    </TextView>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@color/android_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EOsplashlabel"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
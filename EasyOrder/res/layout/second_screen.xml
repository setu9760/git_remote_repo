<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ssparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black_cat"
    android:gravity="center" >

    <GridView
        android:id="@+id/gridview1"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_above="@+id/anotherlayout"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" >
    </GridView>

    <LinearLayout
        android:id="@+id/anotherlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtorderstatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="15"
            android:padding="5dp"
            android:textColor="@color/almond"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/btnlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btncheckout"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                 android:text="@string/btncheckout"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/almond"
                android:textSize="23sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btnresetorder"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/btnreset"
                android:textColor="@color/almond"
                android:textSize="23sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>